extends layout
block body
  form(action="/signup", method="POST")
    fieldset
      legend Sign up
      p
        label Username
        input(name="user[name]", type="text")
      p
        label Email
        input(name="user[email]", type="email")
      p
        label Password
        input(name="user[password]", type="password")
      p
        label First
        input(name="user[first]", type="text")
      p
        label Last
        input(name="user[last]", type="text")
      p
        button Submit
      p
        a(href="/") Go Back
