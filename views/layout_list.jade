doctype 5
html
  head
    title ToDoList
    link(rel='stylesheet', href='/stylesheets/list.css')
  body
    if (authenticated)
      ul
        li
          a(id="user", href="/user/#{me.name}") #{me.name}
        li
          a(href="/list/logout") Logout
        li(id="project") #{me.currentProject.name}
      div(class="cleaner")
      div(id="ele") Owers:
        ul(id="owners")
        input(id="addUser", type="text")
        input(id="addUserButton", type="button", value="add User to this project")
        
    else
      ul
        li: a(href="/list/login") Login
        li: a(href="/list/signup") Sign up
        li Public Lists
    div(class="cleaner")
    hr
    block body
    div(class="cleaner")
    hr
    footer
